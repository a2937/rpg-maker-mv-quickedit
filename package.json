{
  "name": "rpg-maker-mv-mz-quick-edit-tools",
  "displayName": "RPG Maker MV/MZ Quick Edit Tools",
  "description": "An VS Code extension made to allow you to quickly edit RPG Maker data files\"",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "rpg-maker-mv-mz-quick-edit-tools.actorEditor",
        "displayName": "Actor Editor",
        "selector": [
          {
            "filenamePattern": "Actors.json"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
		"vscode:prepublish:desktop": "pnpm run compile",
		"vscode:prepublish:web": "pnpm run package-web",
		"compile:desktop": "tsc -p ./",
		"compile:web": "webpack",
		"lint": "eslint",
		"watch-web": "webpack --watch",
		"package:web": "webpack --mode production --devtool hidden-source-map",
		"watch": "tsc -w -p ./",
		"open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
    "test": "vscode-test"
  },
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^22",
		"@types/vscode": "^1.100.0",
		"@types/vscode-webview": "^1.57.0",
		"@types/webpack-env": "^1.18.8",
		"@vscode/test-web": "^0.0.74",
		"eslint": "^9.13.0",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0",
		"webpack": "^5.102.1",
		"webpack-cli": "^6.0.1"
	}
}
